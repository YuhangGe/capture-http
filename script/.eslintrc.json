{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": [
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-prototype-builtins": "off",
    "space-before-function-paren": ["error", "never"],
    "semi": ["error", "always"]
  }
}